div.menu {
  position: fixed;
  width: 100%;
  height: 45px;
  top: 100%;
  margin-top: -45px;
  background-color: #2d2d35;
  overflow: hidden;
  color: white;

  a {
    display: inline-block;
    width: 24%;
    text-align: center;
    height: 30px;
    font-size: 14px;
    margin-top: 10px;
    margin-bottom: 10px;
    padding-top: 3px;
    border-right: 1px solid rgba(225, 225, 225, 0.6);
    opacity: 0.8;
    letter-spacing: 2px;
    color: white;
  }

  a:hover {
    text-decoration: none;
  }

  a:last-child {
    width: 28%;
    border: 0;
  }
}
